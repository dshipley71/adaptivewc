# Adaptive Web Crawler Configuration
# Copy to .env and customize

# =============================================================================
# Identity
# =============================================================================
CRAWLER_USER_AGENT=AdaptiveCrawler/1.0 (+https://example.com/bot; bot@example.com)

# =============================================================================
# Rate Limiting
# =============================================================================
CRAWLER_DEFAULT_DELAY=1.0
CRAWLER_MIN_DELAY=0.5
CRAWLER_MAX_DELAY=60.0
CRAWLER_MAX_CONCURRENT_PER_DOMAIN=1
CRAWLER_MAX_CONCURRENT_GLOBAL=10
CRAWLER_RESPECT_CRAWL_DELAY=true
CRAWLER_BACKOFF_MULTIPLIER=2.0

# =============================================================================
# Robots.txt
# =============================================================================
CRAWLER_ROBOTS_CACHE_TTL=86400
CRAWLER_RESPECT_TOS=true

# =============================================================================
# Redis (Required for adaptive features)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Adaptive Extraction
# =============================================================================
CRAWLER_ENABLE_ADAPTIVE=true
CRAWLER_STRUCTURE_TTL=604800
CRAWLER_CHANGE_THRESHOLD=0.3

# =============================================================================
# Safety Limits
# =============================================================================
CRAWLER_MAX_PAGE_SIZE_MB=10.0
CRAWLER_REQUEST_TIMEOUT_SECONDS=30.0
CRAWLER_MAX_RETRIES=3
CRAWLER_MAX_REDIRECTS=10
CRAWLER_CIRCUIT_BREAKER_THRESHOLD=5
CRAWLER_CIRCUIT_BREAKER_TIMEOUT=300.0

# =============================================================================
# Security
# =============================================================================
CRAWLER_VERIFY_SSL=true
CRAWLER_BLOCK_PRIVATE_IPS=true

# =============================================================================
# GDPR Compliance
# =============================================================================
GDPR_ENABLED=true
GDPR_RETENTION_DAYS=365
GDPR_LAWFUL_BASIS=legitimate_interest

# =============================================================================
# PII Handling
# =============================================================================
PII_HANDLING=redact

# =============================================================================
# CCPA Compliance
# =============================================================================
CCPA_ENABLED=true
CCPA_HONOR_GPC=true

# =============================================================================
# Legal
# =============================================================================
DPO_EMAIL=
LEGAL_BLOCKLIST_PATH=/etc/crawler/legal_blocklist.txt

# =============================================================================
# Alerting
# =============================================================================
ALERT_SLACK_WEBHOOK=
ALERT_EMAIL_TO=
ALERT_THROTTLE_MINUTES=60

# =============================================================================
# Logging
# =============================================================================
CRAWLER_LOG_LEVEL=INFO
CRAWLER_LOG_FORMAT=json
